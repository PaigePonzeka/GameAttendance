<table class="table table-striped table-bordered player-table">
  <thead>
    <tr>
      <th>Name</th>
      <th class="td-center">#</th>
      {{#if isGameView}}
        <th class="td-center">Attending?</th>
      {{else}}
        <th></th>
      {{/if}}
    </tr>
  </thead>
  {{#each players.jsonById}}
    <tr class="js-game-player-row {{setAttendingClass isAttending}}" data-playerid="{{id}}">
      <td>
        <span class="js-game-player-name">{{lastName}}, {{firstName}} </span>
      </td>
      <td class="td-center">
        <span class="js-game-player-number">{{number}}</span>
      </td>
      <td class="td-actions">
      {{#if ../isEditView}}
        <button class="btn btn-success js-player-yes-btn" data-game-id="{{../../gameId}}" data-player-id="{{../id}}">Yes</button>
        <button class="btn btn-danger js-player-no-btn" data-game-id="{{../../gameId}}" data-player-id="{{../id}}">No</button>
      {{else}}
          <a href="./player.html#playerid={{id}}" target="_blank" class="btn btn-primary js-update-player-btn" data-player-id={{id}}>{{../isGameView}}<i class="glyphicon glyphicon-pencil" title="Edit this Player"></i></a>
          {{#if ../../isRosterList}}
            <a href="#" class="btn btn-danger js-delete-player-btn" title="Remove this Player from Team Roster"><i class="glyphicon glyphicon-remove"></i></a>
          {{/if}}
      {{/if}}
      </td>
    </tr>
  {{/each}}
</table>